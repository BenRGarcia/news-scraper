<h1>Saved Articles Page</h1>
{{#each savedArticles}}
  <div
    class="card my-3"
  >
    <a
      href="{{ link }}"
    >
      <h3>
        {{ title }}
      </h3>
    </a>
    <p>
      {{ preview }}
    </p>
    <button
      class="btn btn-danger"
      data-comments=""
      data-id="{{ _id }}"
    >
      Article Notes
    </button>
  </div>
{{/each}}

{{> modalComments }}