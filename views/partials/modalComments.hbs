<div
  id="js-modal-comments"
  class="modal"
  tabindex="-1"
  role="dialog"
>
  <div
    class="modal-dialog"
    role="document"
  >
    <div
      class="modal-content"
    >
      <div
        class="modal-header"
      >
        <h5
          class="modal-title"
        >
          Article Comments
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span
            aria-hidden="true"
          >
            &times;
          </span>
        </button>
      </div>
      <div
        id="js-append-comments"
        class="modal-body"
      >
      </div>
      <div
        class="p-2"
      >
        <textarea
          id="js-new-comment"
          class="w-100"
          style="height: 80px;"
        >
        </textarea>
      </div>
      <div
        class="modal-footer"
      >
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
        >
          Close
        </button>
        <button
          id="js-save-new-comment"
          type="button"
          class="btn btn-primary"
          data-id=""
        >
          Save new comment
        </button>
      </div>
    </div>
  </div>
</div>